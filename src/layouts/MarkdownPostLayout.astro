---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
import BlogPost from "../components/BlogPost.astro";
const posts = await Astro.glob("../pages/posts/*.md");

// const allPosts = await Astro.glob("../pages/posts/*.md");
