---
import Layout from "../../layouts/Layout.astro";
import BlogPost from "../../components/BlogPost.astro";

export async function getStaticPaths() {
  const allPosts = await Astro.glob("../posts/*.md");

  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.frontmatter.tags.includes(tag)
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout pageTitle={tag}>
  <div class="pt-24 w-full flex justify-center bg-[#000000]">
    <ul class="w-full max-w-7xl md:grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 pt-16">
      {
        posts.map((post) => (
          <BlogPost url={post.url} title={post.frontmatter.title} image={post.frontmatter.image} author={post.frontmatter.author}/>
        ))
      }   
    </ul>
  </div>
</Layout>
